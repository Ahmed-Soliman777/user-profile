generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())

  FirstName String
  LastName  String
  Email     String @unique
  Password  String
  Image     String @default("")

  CreateAt DateTime @default(now())

  Posts Post[]
}

model Post {
  id Int @id @default(autoincrement())

  TextContent String
  Files       String[]

  CreateAt DateTime @default(now())
  UpdateAt DateTime @updatedAt

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}
